&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME ../SAPPORO1  
    BASIS_SET_FILE_NAME ../SAPPORO2  
    BASIS_SET_FILE_NAME ../SAPPORO3  
    POTENTIAL_FILE_NAME ../POTENTIAL
    &RELATIVISTIC
        METHOD ZORA
        ZORA_TYPE scMP
        TRANSFORMATION ATOM
        Z_CUTOFF 36
    &END RELATIVISTIC
    &MGRID
      CUTOFF 320
      REL_CUTOFF  80
    &END MGRID
    &QS
      METHOD GAPW
      EPS_DEFAULT 1.0E-14
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 20
      SCF_GUESS ATOMIC 
      &OT
         MINIMIZER DIIS 
         PRECONDITIONER FULL_ALL
         STEPSIZE 0.2
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 3
      &END 
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 12.0 12.0 12.0
    &END CELL
    &COORD
Ag       8.00000000       8.00000000       6.84942470    
Cl       8.00000000       8.00000000       9.15057530   
    &END COORD
    &KIND Ag
      BASIS_SET Sapporo-DKH3-QZP-2012-diffuse
      POTENTIAL ALL
      RADIAL_GRID 150
      LEBEDEV_GRID 100
    &END KIND
    &KIND Cl
      BASIS_SET Sapporo-QZP-2012-diffuse
      POTENTIAL ALL
      RADIAL_GRID 100
      LEBEDEV_GRID 100
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT refAgCl
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
