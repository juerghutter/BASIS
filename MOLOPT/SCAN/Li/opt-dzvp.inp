&GLOBAL
  PROJECT molopt
  PROGRAM_NAME OPTIMIZE_BASIS
&END GLOBAL
&OPTIMIZE_BASIS

   ! BASIS_TEMPLATE_FILE contains a basis set which is used as a 
   ! starting point for optimization
   BASIS_TEMPLATE_FILE ./BASIS_INPUT

   ! BASIS_WORK_FILE contains the basis set generated with the information below
   BASIS_WORK_FILE WORK_BASIS_STRUCTURE

   ! BASIS_OUTPUT_FILE contains the result basis and intermediate basis set. 
   BASIS_OUTPUT_FILE molopt_dzvp_q3

   ! specify basis set combinations being fitted together
   BASIS_COMBINATIONS 0 0 0 0 0 0 0 0

   USE_CONDITION_NUMBER 

   ! specify the weights on the CN for all combinations
   CONDITION_WEIGHT 0.01 ! 0

   ! specify the weights on the residuums for all combinations
   RESIDUUM_WEIGHT 10  ! 0

   WRITE_FREQUENCY 100

   &OPTIMIZATION
      MAX_FUN 50000
      ACCURACY  1.e-14
   &END

   &TRAINING_FILES
     INPUT_FILE_NAME Li2O-ref.inp  
   &END
   &TRAINING_FILES
     INPUT_FILE_NAME Li4C4H12-ref.inp  
   &END
   &TRAINING_FILES
     INPUT_FILE_NAME Li4H4-ref.inp  
   &END
   &TRAINING_FILES
     INPUT_FILE_NAME LiBH4-ref.inp  
   &END
   &TRAINING_FILES
     INPUT_FILE_NAME LiF-ref.inp  
   &END
   &TRAINING_FILES
     INPUT_FILE_NAME LiSLi-ref.inp
   &END
   &TRAINING_FILES
     INPUT_FILE_NAME Li2-ref.inp   
   &END
   &TRAINING_FILES
     INPUT_FILE_NAME Li4Cl4-ref.inp    
   &END
   &TRAINING_FILES
     INPUT_FILE_NAME Li8-ref.inp    
   &END
   &TRAINING_FILES
     INPUT_FILE_NAME LiCl-ref.inp  
   &END
   &TRAINING_FILES
     INPUT_FILE_NAME LiH-ref.inp
   &END

#########################################################
   &FIT_KIND Li
     BASIS_SET DZVP-MOLOPT-PBE-GTH-q3
     INITIAL_DEGREES_OF_FREEDOM ALL
   &END 
#########################################################
   &FIT_KIND H
     BASIS_SET DZVP-MOLOPT-PBE-GTH-q1
     INITIAL_DEGREES_OF_FREEDOM NONE
   &END   
   &FIT_KIND B
     BASIS_SET DZVP-MOLOPT-PBE-GTH-q3
     INITIAL_DEGREES_OF_FREEDOM NONE
   &END 
   &FIT_KIND C
     BASIS_SET DZVP-MOLOPT-PBE-GTH-q4
     INITIAL_DEGREES_OF_FREEDOM NONE
   &END 
   &FIT_KIND O
     BASIS_SET DZVP-MOLOPT-PBE-GTH-q6
     INITIAL_DEGREES_OF_FREEDOM NONE
   &END 
   &FIT_KIND F
     BASIS_SET DZVP-MOLOPT-PBE-GTH-q7
     INITIAL_DEGREES_OF_FREEDOM NONE
   &END
   &FIT_KIND S 
     BASIS_SET DZVP-MOLOPT-PBE-GTH-q6
     INITIAL_DEGREES_OF_FREEDOM NONE
   &END 
   &FIT_KIND Cl
     BASIS_SET DZVP-MOLOPT-PBE-GTH-q7
     INITIAL_DEGREES_OF_FREEDOM NONE
   &END 
 &END 
&END
