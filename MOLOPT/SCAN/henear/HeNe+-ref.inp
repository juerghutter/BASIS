&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME ../SCAN_UCBASIS
    POTENTIAL_FILE_NAME ../POTENTIAL
    CHARGE 1
    LSD
    &MGRID
      CUTOFF 1600
      REL_CUTOFF  60
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-14
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 3
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      MAX_SCF 10
      &OT
         MINIMIZER DIIS
         PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 10
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL
         &MGGA_X_r2SCAN
         &END
         &MGGA_C_r2SCAN
         &END
       &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 12.0 12.0 12.0
    &END CELL
    &COORD
  He        0.000000        0.000000        0.000000
  Ne        1.430000        0.000000        0.000000
    &END COORD
    &KIND Ne
      BASIS_SET uc-bas-q8
      POTENTIAL GTH-SCAN-q8
    &END KIND
    &KIND He
      BASIS_SET uc-bas-q2
      POTENTIAL GTH-SCAN-q2
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT refHeNe+
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
