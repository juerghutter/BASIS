&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL
&ATOM
  ELEMENT H

  RUN_TYPE BASIS_OPTIMIZATION

  ELECTRON_CONFIGURATION  1s1
  MAX_ANGULAR_MOMENTUM 0

  &METHOD
     METHOD_TYPE  KOHN-SHAM
     &XC
       &XC_FUNCTIONAL PBE0
       &END XC_FUNCTIONAL
     &END XC
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-8
  &END 

  &AE_BASIS
     BASIS_TYPE GAUSSIAN
#    NUM_GTO    3
#    S_EXPONENTS  2.50  0.40  0.15     
     NUM_GTO    4
     S_EXPONENTS 12.50  1.40  0.70 0.15     
  &END AE_BASIS
  &POTENTIAL
    CONFINEMENT_TYPE  BARRIER
    CONFINEMENT 200. 4.0 6.00
  &END POTENTIAL

  &POWELL
     ACCURACY   1.e-14
     STEP_SIZE  0.05
     MAX_FUN    500
  &END
&END ATOM
